<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FormsDemo.MainPage"
    xmlns:local="clr-namespace:FormsDemo"
    Title="Principal">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="Botão"
            Clicked="Handle_Toolbar" />
        <ToolbarItem
            Icon="android.png" />
    </ContentPage.ToolbarItems>
    <StackLayout>
        <!-- Place new controls here -->
        <Label HorizontalOptions="Center" VerticalOptions="Start">
            <Label.Text>Hello world</Label.Text>
        </Label>
        <Entry x:Name="AppIdEntry" Placeholder="ID do aplicativo" HorizontalOptions="StartAndExpand"/>
        <Button Text="Abrir app" Clicked="Handle_Clicked"/>
        <Button Text="Histórico"
                Clicked="Handle_History" />
        <Button Text="Bindings"
                Clicked="Handle_Bindings" />
    </StackLayout>
</ContentPage>